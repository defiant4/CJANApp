<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.cjanappdb.MainActivity" >

    <TextView
        android:id="@+id/textView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:text="DATABASE DEMO APP"
        android:textAppearance="?android:attr/textAppearanceLarge" />

    <Button
        android:id="@+id/dbb1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/textView1"
        android:layout_marginTop="32dp"
        android:text="CREATE TABLE(MOVIE)" />

    <Button
        android:id="@+id/dbb2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/dbb1"
        android:layout_alignRight="@+id/dbb1"
        android:layout_below="@+id/dbb1"
        android:text="LOAD DATA IN MOVIE" />

    <Button
        android:id="@+id/dbb3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/dbb2"
        android:layout_alignRight="@+id/dbb2"
        android:layout_below="@+id/dbb2"
        android:text="VIEW ALL MOVIE" />

    <TextView
        android:id="@+id/dbrecords"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/textView1"
        android:layout_alignRight="@+id/dbb3"
        android:layout_below="@+id/dbb3"
        android:layout_marginTop="23dp"
        android:text="MOVIE LIST"
        android:textAppearance="?android:attr/textAppearanceMedium" />

</RelativeLayout>
